<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fryarludwig.urbanhunt.Controllers.MainMenuActivity">

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Make Game"
        android:id="@+id/new_b"
        android:onClick="makeGame"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Join a Game"
        android:id="@+id/join_b"
        android:onClick="joinGame"
        android:layout_below="@+id/new_b"
        android:layout_alignLeft="@+id/new_b"
        android:layout_alignStart="@+id/new_b"
        android:layout_marginTop="77dp" />
</RelativeLayout>